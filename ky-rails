# config/nginx.conf
upstream puma {
  server 127.0.0.1:3000;
}

# Default server block - catches requests to IP or unknown domains
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name _;
    return 444;  # Close connection without response
}

# HTTP server - redirect to HTTPS
server {
  listen 80;
  listen [::]:80;
  server_name www.kuangyuanstone.com;

  # Redirect all HTTP traffic to HTTPS
  return 301 https://$server_name$request_uri;
}

# HTTPS server
server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;
  server_name www.kuangyuanstone.com;

  # SSL Certificate paths (update these paths to your certificate locations)
  ssl_certificate /etc/ssl/certs/kuangyuanstone.com.pem;
  ssl_certificate_key /etc/ssl/private/kuangyuanstone.com.key;

  # SSL configuration
  ssl_protocols TLSv1.2 TLSv1.3;
  ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384';
  ssl_prefer_server_ciphers off;
  ssl_session_cache shared:SSL:10m;
  ssl_session_timeout 10m;

  root /home/deploy/kuang_yuan_on_rails/public;
  access_log /home/deploy/kuang_yuan_on_rails/log/nginx.access.log;
  error_log /home/deploy/kuang_yuan_on_rails/log/nginx.error.log info;

  location / {
    proxy_pass http://puma;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;  # Always HTTPS since we're on SSL
    proxy_set_header X-Forwarded-Ssl on;
    proxy_set_header X-Forwarded-Port 443;
  }

  # Serve uploaded files directly with nginx
  location /uploads/ {
    alias /home/deploy/kuang_yuan_on_rails/public/uploads/;
    expires 1y;
    add_header Cache-Control "public, immutable";
    add_header Access-Control-Allow-Origin *;
    try_files $uri =404;
  }

  location ^~ /assets/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

  error_page 500 502 503 504 /500.html;
  client_max_body_size 10M;
  keepalive_timeout 10;
}
