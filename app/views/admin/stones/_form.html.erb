<%= form_for ["admin", @stone] do |f| %>
	<%= form_errors(@stone) %>
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, class: "form-control" %>	
	</div>
	<div class="form-group">
		<%= f.label :feature %>
		<%= f.text_field :feature, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :origin %>
		<%= f.text_field :origin, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_area :description, class: "form-control", rows: 7 %>
	</div>
	<label class="hvr-rectangle-out agileits w3layouts">
		<%= f.submit "儲存" %>
	</label>
<% end %>