<%= form_for ["admin", @tab], html: { multipart: true } do |f| %>
	<%= form_errors(@tab) %>
	<div class="form-group">
		<%= f.label :icon, class: "required" %>
		<div class="clearfix"></div>
		<%= f.collection_radio_buttons :icon, render_tab_icons, :first, :first do |b| %>
			<label class="radio-inline">
			<%= b.label { b.radio_button + "<span class='glyphicon agileits w3layouts #{b.object.first}' aria-hidden='true'></span>".html_safe } %>
			</label>
		<% end %>
	</div>
	<div class="form-group">
		<%= f.label :title, class: "required" %>
		<%= f.text_field :title, class: "form-control", required: true %>	
	</div>
	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_area :description, class: "form-control", rows: 7 %>
	</div>
	<div class="form-group">
		<%= f.label :priority %>
		<%= f.select :priority, 1..5, {}, class: "form-control" %>
	</div>
	<label class="hvr-rectangle-out agileits w3layouts">
		<%= f.submit "儲存", data: { disable_with: "資料上傳中..." } %>
	</label>
<% end %>