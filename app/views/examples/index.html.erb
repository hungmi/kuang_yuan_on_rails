<div class="event" id="events">
	<div class="container">
		<div class="top-event">
			<h3>精選案例</h3>
			<p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text
				Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>
		</div>
		<%= @examples.each_slice(4) do |ex4| %>
			<% ex4.each_with_index do |ex, i| %>
				<div class="<%= i.even? ? 'event-grid' : '' %>">
					<div class="wow <%= render_wrapper_direction(i) %> animated" data-wow-delay=".5s">
						<%= link_to ex do %>
							<img src="<%= asset_url('pc.jpg') %>" class="img-responsive" alt="">
						<% end %>
						<div class="<%= render_content_direction(i) %>">
							<div class="event-gr">
								<h4><%= link_to ex.full_name, ex %></h4>
								<p><%= ex.description.truncate(100) %></p>
							</div>
						</div>
					</div>
					<% if i.odd? %>
						<div class="clearfix"></div>
					<% end %>
				</div>
			<% end %>
		<% end %>   
	</div>
</div>